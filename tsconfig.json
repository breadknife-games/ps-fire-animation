{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "types": ["@adobe/cc-ext-uxp-types", "@types/photoshop", "@types/node", "svelte"]
  },
  "include": [
    "./src",
    "./uxp.config.ts",
    "./webview-ui/src/**/*.ts",
    "./webview-ui/src/**/*.svelte"
  ]
}
